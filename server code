from keras.models import load_model
import cv2
import numpy as np
import socket
import threading
from collections import deque
import time

# --- ëª¨ë¸ ë° ë¼ë²¨ ë¶ˆëŸ¬ì˜¤ê¸° ---
model = load_model("keras_Model.h5", compile=False)
with open("labels.txt", "r", encoding="utf-8") as f:
    class_names = [label.strip() for label in f.readlines()]

# ì›¹ìº  ì´ˆê¸°í™”
webcam_active = True
cap = cv2.VideoCapture(1)  # USB ì™¸ì¥ ì›¹ìº  ì¸ë±ìŠ¤ (í•„ìš”ì‹œ ë³€ê²½)
# webcam_active = False ì›¹ìº  í•„ìš”ì—†ì„ ì‹œ ìœ„ì— ë‚´ìš© ì£¼ì„ì²˜ë¦¬ í›„ í™œì„±í™”
# cap = None

if not cap.isOpened():
    print("âŒ ì›¹ìº ì„ ì—´ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.")
    exit()

cap.set(cv2.CAP_PROP_FRAME_WIDTH, 640)
cap.set(cv2.CAP_PROP_FRAME_HEIGHT, 480)

# ===== ì„¤ì • =====
SERVER_IP = "192.168.3.5"
SERVER_PORT = 3000

# ===== ì „ì—­ ìƒíƒœ =====
lock = threading.Lock()
clients = set()  # ìƒì¡´ ì†Œì¼“ ì§‘í•©
client_roles = {}
cmd_queue = deque()  # ì•±â†’ABBë¡œ ê°€ëŠ” ì§€ë ¹ í
cmd_queue_abb = deque()    # ABBìš© ëª…ë ¹ í
cmd_queue_abb2 = deque()   # ABB2ìš© ëª…ë ¹ í
current_words = []
current_index = 0

counts = {"BLACK": 0, "WHITE": 0, "BLUE": 0}
frame_count = 0
last_result = ("NONE", 0.0)

previous_class = "NONE"
class_sent = False

# 2ì´ˆ ì§€ì—°ì„ ìœ„í•œ ë³€ìˆ˜
detection_time = None
# NONE ìƒíƒœ ì´í›„ ì „ì†¡ì„ ìœ„í•œ í”Œë˜ê·¸
can_send_next = True

# ì—­í•  ë¬¸ìì—´ í™•ì¥
allowed_roles = {"ROLE_APP", "ROLE_ABB", "ROLE_ABB2", "ROLE_ARDUINO"}

# ===== ìœ í‹¸ =====
def log(msg):
    print(time.strftime("[%H:%M:%S] "), msg)

def get_role(sock):
    with lock:
        return client_roles.get(sock, "UNKNOWN")

def get_abbs():
    with lock:
        return [s for s, r in client_roles.items() if r == "ROLE_ABB"]

def get_abb2s():
    with lock:
        return [s for s, r in client_roles.items() if r == "ROLE_ABB2"]

def get_arduinos():
    with lock:
        return [s for s, r in client_roles.items() if r == "ROLE_ARDUINO"]

def get_apps():
    with lock:
        return [s for s, r in client_roles.items() if r == "ROLE_APP"]

def safe_send(sock, text):
    try:
        sock.send(text.encode())
        return True
    except socket.timeout:
        print(f"âŒ ì „ì†¡ íƒ€ì„ì•„ì›ƒ ì˜¤ë¥˜({get_role(sock)}): {text}")
        return False
    except Exception as e:
        print(f"âŒ ì „ì†¡ ì˜¤ë¥˜({get_role(sock)}): {e}")
        return False

# ===== ì¶”ê°€ëœ í•¨ìˆ˜: ë¬¸ìì—´ì„ ì •í•´ì§„ ë‹¨ì–´ ê¸°ì¤€ìœ¼ë¡œ ì¬ê·€ì  ë¶„ë¦¬ =====
def split_message_by_words_recursive(message, word_list):
    if not message:
        return []  # ë¹ˆ ë¬¸ìì—´ì´ë©´ ë¶„í•  ì™„ë£Œ

    for word in word_list:
        if message.startswith(word):
            rest = message[len(word):]
            result_rest = split_message_by_words_recursive(rest, word_list)
            if result_rest is not None:
                return [word] + result_rest
    return None

# ===== ì¶”ê°€ëœ í•¨ìˆ˜: ABBì— ë‹¨ì–´ ìˆœì°¨ ì „ì†¡ =====
def send_next_word():
    global current_index, current_words
    abb_socks = get_abbs()
    with lock:
        if current_index < len(current_words):
            word = current_words[current_index]
            for sock in abb_socks:
                safe_send(sock, word)
                print(f"âœ… ABBì— ì „ì†¡: {word}")
        else:
            print("âœ… ëª¨ë“  ë‹¨ì–´ ì „ì†¡ ì™„ë£Œ")

# ===== ë©”ì‹œì§€ ì²˜ë¦¬ =====
def handle_app_message(msg, sock):
    global counts, current_words, current_index
    msg = msg.strip()
    colors = ["BASEBK", "BASEWH", "BODYWH", "BODYRD", "WHEELBK", "WHEELWH"]
    with lock:
        current_words = split_message_by_words_recursive(msg, sorted(colors, key=len, reverse=True))
        current_index = 0
    if current_words:
        send_next_word()

    if msg == "WHLSTRT":
        with lock:
            cmd_queue_abb2.append(msg)  # WHLSTRTëŠ” ABB2 ì „ìš© í
        safe_send(sock, f"ACK {msg}")
        print(f"âœ… APP ëª…ë ¹ ìˆ˜ì‹  â†’ ABB2 í ì ì¬: {msg}")

    elif msg in ("ASEMB1", "OTHER_CMD_FOR_ABB"):
        with lock:
            cmd_queue_abb.append(msg)  # ê¸°íƒ€ ì‹ í˜¸ëŠ” ABB í
        safe_send(sock, f"ACK {msg}")
        print(f"âœ… APP ëª…ë ¹ ìˆ˜ì‹  â†’ ABB í ì ì¬: {msg}")

    else:
        safe_send(sock, f"NACK {msg}")
        print(f"âŒ APP ì•Œ ìˆ˜ ì—†ëŠ” ëª…ë ¹: {msg}")

def handle_abb_message(msg, sock):
    global current_index, current_words
    msg = msg.strip()
    print(f"âœ… ABB ë©”ì‹œì§€ ìˆ˜ì‹ : {msg}")

    if msg == "C":  # ABBê°€ í™•ì¸ ë©”ì‹œì§€ ë³´ë‚¼ ë•Œë§ˆë‹¤ ë‹¤ìŒ ë‹¨ì–´ ì „ì†¡
        with lock:
            if current_index < len(current_words):
                current_index += 1
                if current_index < len(current_words):
                    send_next_word()
                else:
                    print("âœ… ABB ëª¨ë“  ë‹¨ì–´ ì „ì†¡ ì™„ë£Œ")

    else:
        # ì•„ë‘ì´ë…¸ ëª…ë ¹ íì— ABB ë©”ì‹œì§€ ì¶”ê°€
        with lock:
            cmd_queue.append(msg)
        print(f"âœ… ABB ë©”ì‹œì§€ë¥¼ ì•„ë‘ì´ë…¸ íì— ì¶”ê°€: {msg}")

def handle_abb2_message(msg, sock):
    global webcam_active, cap
    msg = msg.strip()
    print(f"âœ… ABB2 ìƒíƒœë©”ì‹œì§€ ìˆ˜ì‹ : {msg}")

    with lock:
        cmd_queue.append(msg)  # ëª¨ë“  ë©”ì‹œì§€ë¥¼ ì•„ë‘ì´ë…¸ íì— ì¶”ê°€

    if msg == "recv_cont":
        print("ğŸš© ë¶„ë¥˜ ì™„ë£Œ, ì›¹ìº  ì¢…ë£Œ")
        if webcam_active:
            cap.release()
            webcam_active = False

def handle_arduino_message(msg, sock):
    msg = msg.strip()
    print(f"âœ… ì•„ë‘ì´ë…¸ ìƒíƒœë©”ì‹œì§€ ìˆ˜ì‹ : {msg}")

    abb2_msgs = [
        "receive1_ready", "receive2_ready", "car1_ready", "car2_ready"
    ]
    abb_msgs = [
        "give1_ready", "give2_ready", "car1_receive_ready", "car2_receive_ready"
    ]

    if msg in abb2_msgs:
        for abb2 in get_abb2s():
            safe_send(abb2, msg)
            print(f"âœ… ABB2ë¡œ ë©”ì‹œì§€ ì „ì†¡: {msg}")

    elif msg in abb_msgs:
        for abb in get_abbs():
            safe_send(abb, msg)
            print(f"âœ… ABBë¡œ ë©”ì‹œì§€ ì „ì†¡: {msg}")

def flush_cmds_to_abb():
    abbs = get_abbs()
    if not abbs:
        return
    while True:
        with lock:
            if not cmd_queue_abb:
                break
            msg = cmd_queue_abb.popleft()
        for abb in abbs:
            ok = safe_send(abb, msg)
            if ok:
                print(f"âœ… íâ†’ABB ì „ì†¡: {msg}")

def flush_cmds_to_abb2():
    abb2s = get_abb2s()
    if not abb2s:
        return
    while True:
        with lock:
            if not cmd_queue_abb2:
                break
            msg = cmd_queue_abb2.popleft()
        for abb2 in abb2s:
            ok = safe_send(abb2, msg)
            if ok:
                print(f"âœ… íâ†’ABB2 ì „ì†¡: {msg}")

def flush_cmds_to_arduino():
    arduinos = get_arduinos()
    if not arduinos:
        return
    while True:
        with lock:
            if not cmd_queue:
                break
            msg = cmd_queue.popleft()
        for arduino in arduinos:
            ok = safe_send(arduino, msg)
            if ok:
                print(f"âœ… íâ†’ARDUINO ì „ì†¡: {msg}")
            else:
                print(f"âŒ íâ†’ARDUINO ì „ì†¡ ì‹¤íŒ¨: {msg}")

def manual_send_input():
    while True:
        try:
            print("\n=== ì—°ê²°ëœ í´ë¼ì´ì–¸íŠ¸ ëª©ë¡ ===")
            with lock:
                for i, sock in enumerate(clients):
                    role = client_roles.get(sock, "UNKNOWN")
                    print(f"[{i}] {role} {sock.getpeername()}")

            idx = input("ì „ì†¡í•  í´ë¼ì´ì–¸íŠ¸ ë²ˆí˜¸ ì…ë ¥ (ì·¨ì†Œ: ë¹ˆ ì—”í„°): ").strip()
            if idx == "":
                continue
            try:
                idx = int(idx)
            except ValueError:
                print("ë²ˆí˜¸ë¥¼ ì…ë ¥í•´ì•¼ í•©ë‹ˆë‹¤.")
                continue

            with lock:
                sock_list = list(clients)
                if idx < 0 or idx >= len(sock_list):
                    print("ì˜ëª»ëœ ë²ˆí˜¸ì…ë‹ˆë‹¤.")
                    continue
                target_sock = sock_list[idx]
                role = client_roles.get(target_sock, "UNKNOWN")

            msg = input(f"ë³´ë‚¼ ë©”ì‹œì§€ ì…ë ¥ (í´ë¼ì´ì–¸íŠ¸ {role}): ").strip()
            if msg == "":
                print("ë¹ˆ ë©”ì‹œì§€, ì·¨ì†Œ.")
                continue

            sent = safe_send(target_sock, msg)
            if sent:
                print(f"âœ… {role} í´ë¼ì´ì–¸íŠ¸ì— '{msg}' ì „ì†¡ ì™„ë£Œ")
            else:
                print(f"âŒ ì „ì†¡ ì‹¤íŒ¨")
        except Exception as e:
            print(f"âŒ manual_send_input ì˜¤ë¥˜: {e}")

def client_thread(sock, addr):
    print(f"âœ… í´ë¼ì´ì–¸íŠ¸ ì—°ê²°ë¨: {addr}")
    with lock:
        clients.add(sock)

    buffered_data = ""

    try:
        sock.settimeout(5.0)
        first = sock.recv(1024)
        sock.settimeout(1.0)
    except Exception as e:
        print(f"âŒ ì´ˆê¸° ìˆ˜ì‹  ì‹¤íŒ¨({addr}): {e}")
        first = b""

    role_msg = first.decode().strip() if first else ""
    if role_msg in allowed_roles:
        with lock:
            client_roles[sock] = role_msg
        print(f"í´ë¼ì´ì–¸íŠ¸ {addr} ì—­í•  ë“±ë¡: {role_msg}")
    else:
        print(f"âŒ í´ë¼ì´ì–¸íŠ¸ {addr} ì—­í•  ë¯¸ëª…ì‹œ ë˜ëŠ” ì•Œ ìˆ˜ ì—†ìŒ (ì²«ë©”ì‹œì§€='{role_msg}') - ì—°ê²° ì¢…ë£Œ")
        try:
            sock.send("ERROR: ì—­í•  ë¯¸ì§€ì • ë˜ëŠ” ì•Œ ìˆ˜ ì—†ëŠ” ì—­í• ì…ë‹ˆë‹¤.\n".encode())
        except:
            pass
        sock.close()
        return

    try:
        sock.settimeout(0.05)
        while True:
            flush_cmds_to_abb()
            flush_cmds_to_abb2()
            flush_cmds_to_arduino()
            try:
                data = sock.recv(1024)
            except socket.timeout:
                continue
            if not data:
                break

            buffered_data += data.decode()

            msg = buffered_data.strip()
            buffered_data = ""

            if not msg:
                continue

            role = get_role(sock)

            if role == "ROLE_APP":
                if msg.startswith("ACK"):
                    print(f"âœ… APPë¡œë¶€í„° ì‘ë‹µ ìˆ˜ì‹ : {msg}")
                else:
                    colors = ["BASEBK", "BASEWH", "BODYWH", "BODYRD", "WHEELBK", "WHEELWH"]
                    split_result = split_message_by_words_recursive(msg, sorted(colors, key=len, reverse=True))
                    if split_result is None:
                        print(f"âŒ APP ì•Œ ìˆ˜ ì—†ëŠ” ëª…ë ¹: {msg}")
                        safe_send(sock, f"NACK {msg}")
                    else:
                        with lock:
                            current_words = split_result
                            current_index = 0
                        if current_words:
                            send_next_word()
                        if msg == "WHLSTRT":
                            with lock:
                                cmd_queue_abb2.append(msg)
                            safe_send(sock, f"ACK {msg}")
                            print(f"âœ… APP ëª…ë ¹ ìˆ˜ì‹  â†’ ABB2 í ì ì¬: {msg}")

                        elif msg in ("ASEMB1", "OTHER_CMD_FOR_ABB"):
                            with lock:
                                cmd_queue_abb.append(msg)
                            safe_send(sock, f"ACK {msg}")
                            print(f"âœ… APP ëª…ë ¹ ìˆ˜ì‹  â†’ ABB í ì ì¬: {msg}")

                        else:
                            pass

            elif role == "ROLE_ABB":
                if msg.startswith("ACK"):
                    print(f"âœ… ABBë¡œë¶€í„° ì‘ë‹µ ìˆ˜ì‹ : {msg}")
                else:
                    handle_abb_message(msg, sock)

            elif role == "ROLE_ABB2":
                if msg.startswith("ACK"):
                    print(f"âœ… ABB2ë¡œë¶€í„° ì‘ë‹µ ìˆ˜ì‹ : {msg}")
                else:
                    handle_abb2_message(msg, sock)

            elif role == "ROLE_ARDUINO":
                if msg.startswith("ACK"):
                    print(f"âœ… ì•„ë‘ì´ë…¸ë¡œë¶€í„° ì‘ë‹µ ìˆ˜ì‹ : {msg}")
                else:
                    handle_arduino_message(msg, sock)
            else:
                print(f"âŒ UNKNOWN ì—­í•  ìˆ˜ì‹ ({addr}): {msg}")

    except Exception as e:
        print(f"âŒ í´ë¼ì´ì–¸íŠ¸ ì˜¤ë¥˜({addr}): {e}")
    finally:
        with lock:
            clients.discard(sock)
            client_roles.pop(sock, None)
        try:
            sock.close()
        except:
            pass
        print(f"í´ë¼ì´ì–¸íŠ¸ ì—°ê²° ì¢…ë£Œ: {addr}")

def accept_loop(srv):
    while True:
        cs, addr = srv.accept()
        t = threading.Thread(target=client_thread, args=(cs, addr), daemon=True)
        t.start()

def main():
    global frame_count, last_result, previous_class, class_sent
    global detection_time, can_send_next, counts
    global cap, webcam_active

    failure_count = 0
    max_failures = 10

    srv = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    srv.setsockopt(socket.SOL_SOCKET, socket.SO_REUSEADDR, 1)
    srv.bind((SERVER_IP, SERVER_PORT))
    srv.listen(5)
    print(f"âœ… ì„œë²„ ì†Œì¼“ ì‹œì‘, {SERVER_IP}:{SERVER_PORT} í´ë¼ì´ì–¸íŠ¸ ì ‘ì† ëŒ€ê¸° ì¤‘...")

    threading.Thread(target=accept_loop, args=(srv,), daemon=True).start()
    threading.Thread(target=manual_send_input, daemon=True).start()

    while True:
        if webcam_active:
            ret, image = cap.read()
            if not ret:
                failure_count += 1
                print(f"âš ï¸ í”„ë ˆì„ ì½ê¸° ì‹¤íŒ¨ {failure_count}íšŒ")
                if failure_count >= max_failures:
                    print("ğŸ”„ ì¹´ë©”ë¼ ì¬ì´ˆê¸°í™” ì‹œë„")
                    cap.release()
                    time.sleep(2)
                    cap = cv2.VideoCapture(1, cv2.CAP_DSHOW)
                    failure_count = 0
                continue
            else:
                failure_count = 0

            h, w, _ = image.shape
            roi_size = 100
            x1 = int(w * 0.43)
            y1 = int(h * 0.58) - roi_size
            x2 = x1 + roi_size
            y2 = y1 + roi_size
            roi = image[y1:y2, x1:x2]

            frame_count += 1
            resized_for_model = cv2.resize(roi, (224, 224), interpolation=cv2.INTER_AREA)
            norm = (np.asarray(resized_for_model, dtype=np.float32).reshape(1, 224, 224, 3) / 127.5) - 1

            if frame_count % 15 == 0:
                prediction = model.predict(norm, verbose=0)
                index = np.argmax(prediction)
                class_name = class_names[index]
                confidence_score = float(prediction[0][index])
                last_result = (class_name, confidence_score)
            else:
                class_name, confidence_score = last_result

            text = f"Detected: {class_name} ({confidence_score * 100:.1f}%)"
            cv2.putText(image, text, (10, 30), cv2.FONT_HERSHEY_SIMPLEX, 1, (255, 255, 255), 2)
            cv2.rectangle(image, (x1, y1), (x2, y2), (255, 0, 0), 2)

            if class_name == "NONE":
                with lock:
                    can_send_next = True
                    detection_time = None

            if can_send_next:
                should_send = False
                if class_name in ["BLACK", "WHITE"] and confidence_score > 0.8:
                    should_send = True
                elif class_name == "BLUE" and confidence_score > 0.5:
                    should_send = True

                if should_send:
                    abb2s = get_abb2s()
                    apps = get_apps()

                    if detection_time is None:
                        detection_time = time.time()

                    elif time.time() - detection_time >= 2.0:

                        for abb2 in abb2s:
                            sent = safe_send(abb2, class_name)
                            if sent:
                                print(f"âœ… ABB2ë¡œ ìƒ‰ìƒ '{class_name}' ë©”ì‹œì§€ ì „ì†¡ (2ì´ˆ ì§€ì—°)")

                        for app in apps:
                            sent = safe_send(app, class_name)
                            if sent:
                                print(f"âœ… APPìœ¼ë¡œ ìƒ‰ìƒ '{class_name}' ë©”ì‹œì§€ ì „ì†¡")

                        with lock:
                            can_send_next = False
                            previous_class = class_name
                            detection_time = None

            cv2.imshow("Webcam Image", image)

        else:
            cv2.destroyAllWindows()

        flush_cmds_to_abb()
        flush_cmds_to_abb2()
        flush_cmds_to_arduino()

        key = cv2.waitKey(10)
        if key == 27:
            print("ğŸ›‘ ì‚¬ìš©ì ì¢…ë£Œ")
            break

    cap.release()
    cv2.destroyAllWindows()
    with lock:
        for s in list(clients):
            try:
                s.close()
            except:
                pass
    srv.close()

if __name__ == "__main__":
    main()
